# see http://bundler.io/gemfile.html

source "https://rubygems.org"

ruby '2.5.1'

group(:test) do
  # ruby make
  gem 'rake','~>12.3.0'

  # bdd and test framework
  gem 'cucumber','~>2.99.0'
  gem 'rspec','~>3.7.0'

  # underlying browser driver
  gem 'selenium-webdriver','~>2.53.4'

  # testing dsl and other features over the webdriver
  gem 'capybara','~>2.18.0'

  # screenshots
  gem 'capybara-screenshot','~>1.0.19'

  # headless testing -- requires phantomjs
  gem 'poltergeist','~>1.17.0'

  # guard utility
  gem 'guard','~>2.14.2'
  gem 'guard-rake','~>1.0.0'   # allows running rake in Guardfile

  # logger
  gem 'log4r','~>1.1.10'

  # excel parser
  gem 'roo', '~> 2.7.1'

  #  page object model pattern
  gem 'site_prism', '~> 2.12'

  #  Spreadsheet Library is designed to read and write Spreadsheet Documents
  gem 'spreadsheet', '~> 1.1.7'


end
